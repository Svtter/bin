#!/bin/bash

# -a 添加新的blog
# -l 显示所有的blog
# -0 编辑本身

echo "input what you want: "
echo "1.add new blog."
echo "2.backup blog."
echo "3.blog list"
echo "0.edit cmd blog."

export bin=$HOME/bin

read op
if [ $op = "0" ]; then
    vim $bin/blog
elif [ $op = "1" ]; then
    $HOME/bin/lib/blog/add_blog
    echo "success."
elif [ $op = "2" ]; then
    $HOME/bin/lib/blog/bk_blog
    echo "success."
elif [ $op = "3" ]; then
    $HOME/bin/lib/blog/ls_blog
    echo "success."
else
    echo "no command."
fi

